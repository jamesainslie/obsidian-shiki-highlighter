{
  "name": "obsidian-shiki-highlighter",
  "version": "0.1.1",
  "description": "Enhanced syntax highlighting for Obsidian using Shiki and TextMate grammars",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "syntax-highlighting",
    "shiki",
    "textmate"
  ],
  "author": "James Ainslie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yaklabco/obsidian-shiki-highlighter.git"
  },
  "bugs": {
    "url": "https://github.com/yaklabco/obsidian-shiki-highlighter/issues"
  },
  "homepage": "https://github.com/yaklabco/obsidian-shiki-highlighter#readme",
  "devDependencies": {
    "@codemirror/language": "^6.10.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.19.9",
    "jsdom": "^23.0.1",
    "obsidian": "^1.5.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4"
  },
  "dependencies": {
    "shiki": "^1.0.0"
  }
}
